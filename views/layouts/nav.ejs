<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book DriveTest</title>
    <style>
        /* Custom Navbar Styles */
        .custom-navbar {
            background-color: #333;
            color: #fff;
            padding: 15px 0;
            position: relative;
            z-index: 1000;
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .navbar-logo {
            font-size: 1.8em;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
        }

        .navbar-toggler {
            background: none;
            border: none;
            color: #fff;
            font-size: 1.2em;
            cursor: pointer;
        }

        .navbar-toggler-icon {
            background: url('data:image/svg+xml;base64,...') no-repeat center center;
            width: 30px;
            height: 30px;
            display: inline-block;
        }

        .navbar-menu {
            display: flex;
        }

        .navbar-nav {
            list-style: none;
            display: flex;
            gap: 20px;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
            font-size: 1em;
            padding: 10px 15px;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #f39c12;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .navbar-menu {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 60px;
                right: 20px;
                background-color: #333;
                width: 250px;
                border-radius: 8px;
            }

            .navbar-menu.active {
                display: flex;
            }

            .nav-link {
                padding: 15px 20px;
                font-size: 1.2em;
            }
        }

        .navbar-toggler.active + .navbar-menu {
            display: flex;
        }
    </style>
</head>
<body>
    <nav class="custom-navbar">
        <div class="navbar-container">
            <a class="navbar-logo" href="/">Book DriveTest</a>
            <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <% if (user) { %>
                        <% if (user?.userType==='Driver' ) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/g2">G2 Test</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/g">G Test</a>
                            </li>
                        <% } else if (user?.userType==='Admin' ) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/appointment">Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/teststatus">TestStatus</a>
                            </li>
                        <% } else if (user?.userType==='Examiner' ) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/examiner">Exams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/gtestTakers">TestTakers</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <script>
        document.querySelector('.navbar-toggler').addEventListener('click', function() {
            document.querySelector('.navbar-menu').classList.toggle('active');
        });
    </script>
</body>
</html>
